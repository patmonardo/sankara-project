{
  "compilerOptions": {
    /* Base Options: */
    "skipLibCheck": true,
    "target": "es6",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    /* Strictness */
    "strict": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    /* Bundled projects */
    "types": [
      "node"
    ],
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    /* Path aliases */
    "paths": {
      "@/*": [
        "./app/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "app/**/*",
    ".next/types/**/*.ts", "core/bridge",
  ],
  "exclude": [
    "node_modules",
  ]
}
